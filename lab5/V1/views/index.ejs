<!DOCTYPE html>
<html lang="en">
<%- include("partials/header.ejs") %>
<body>
<h1>Quote Finder</h1>
  <!--  KEYWORD -->
<form action="/searchByKeyword">
Keyword:
<input type="text" name="keyword">
<button>Search by Keyword</button>
</form>
  <!--  AUTHOR -->
  <form action="/searchByAuthor">
    <!--  authors is the variable passed in .render()-->
  <select name="authorId">
    <% for (author of authorDB) { %>
      <option value="<%=author.authorId %>">
        <%=author.firstName %> <%=author.lastName %>
        </option>
          <% } %>
  
          </select>
  <button>Search by Author</button>
  </form>

            <!--  CATEGORY -->
            <form action="/searchByCategory">
            Category:
            <input type="text" name="category">
            <button>Search by Category</button>
            </form>
            
            
            <!--  LIKES-->
            <form action="/searchByLikes">
              Min:
              <input type="text" name="likesmin">
              Max: 
               <input type="text" name="likesmax">
              <button>Search by Range of Likes</button>
              </form>

  
  <%- include("partials/footer.ejs") %>
</body>

</html>